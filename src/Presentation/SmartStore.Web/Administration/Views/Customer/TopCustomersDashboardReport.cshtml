@model TopCustomersDashboardReportModel

<div class="bg-white rounded-lg shadow">
    <div class="px-3 py-2" style="text-align-last: justify;">
        <div class="font-weight-medium p-0 title-report">
            <i class="fa fa-crown pr-2"></i>
            @T("Admin.SalesReport.TopCustomers")
        </div>

        <nav class="p-0" style="display: inline-block">
            <div class="nav nav-tabs" role="tablist">
                <a class="btn btn-success nav-item nav-link nav-item-left" id="customers-quantity-tab" data-toggle="tab" href="#customers-quantity" role="tab" aria-controls="customers-quantity" aria-selected="false">by quantity</a>
                <a class="btn btn-success nav-item nav-link nav-item-right active" id="customers-amount-tab" data-toggle="tab" href="#customers-amount" role="tab" aria-controls="customers-amount" aria-selected="true">by amount</a>
            </div>
        </nav>
    </div>

    <div class="tab-content" id="customers-tabcontent">
        <div class="tab-pane fade show active" id="customers-amount" role="tabpanel" aria-labelledby="customers-amount-tab">
            <div class="table-responsive">
                <table class="table table-striped m-0">
                    <thead>
                        <tr>
                            <th class="display-row">@T("Admin.Customers.Reports.BestBy.Fields.Customer")</th>
                            <th class="display-row row-center">@T("Admin.Customers.Reports.BestBy.Fields.OrderCount")</th>
                            <th class="display-row row-right">@T("Admin.SalesReport.Bestsellers.Fields.TotalAmount")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model.TopCustomersByAmount)
                        {
                            <tr>
                                <td class="display-row">
                                    @Html.ActionLink(x.DisplayName, "Edit", "Customer", new { id = x.CustomerId }, new { })
                                </td>
                                <td class="display-row row-center">@x.OrderCount</td>
                                <td class="display-row row-right font-weight-500">@x.OrderTotal</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="tab-pane fade" id="customers-quantity" role="tabpanel" aria-labelledby="customers-quantity-tab">
            <div class="table-responsive">
                <table class="table table-striped m-0">
                    <thead>
                        <tr>
                            <th class="display-row">@T("Admin.Customers.Reports.BestBy.Fields.Customer")</th>
                            <th class="display-row row-center">@T("Admin.Customers.Reports.BestBy.Fields.OrderCount")</th>
                            <th class="display-row row-right">@T("Admin.SalesReport.Bestsellers.Fields.TotalAmount")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model.TopCustomersByQuantity)
                        {
                            <tr>
                                <td class="display-row">
                                    @Html.ActionLink(x.DisplayName, "Edit", "Customer", new { id = x.CustomerId }, new { })
                                </td>

                                <td class="display-row row-center font-weight-500">@x.OrderCount</td>
                                <td class="display-row row-right">@x.OrderTotal</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>