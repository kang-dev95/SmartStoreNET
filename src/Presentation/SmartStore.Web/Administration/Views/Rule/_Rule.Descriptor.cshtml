@model IRuleExpression

@using SmartStore.Rules

<div class="rule-descriptor font-weight-medium form-control-plaintext text-truncate text-gray" title="@Model.Descriptor.DisplayName (@(Model.Descriptor.Name))">
    @Model.Descriptor.DisplayName
    @if (!Model.Descriptor.IsValid)
    {
        <span class="badge badge-warning">
            @T("Common.Invalid")
        </span>
    }
</div>
