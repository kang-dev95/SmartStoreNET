@model OrderFulfillmentDashboardReportModel

<div class="report">
    <div class="report-title-row">
        <div class="report-title">@T("Admin.Salesreport.OrderFulfillmentReport")</div>
    </div>
    <div class="report-pie-row justify-content-between">
        <div>
            <div class="pie-chart-title">
                @T("Time.Today")
            </div>
            <div class="report-pie-chart" data-percent="55">
                <div class="pie-chart-text">
                    <div class="pie-chart-value">874</div>
                    <div class="pt-1 small">@T("Admin.SalesReport.Incomplete.Item")</div>
                </div>
            </div>
        </div>
        <div>
            <div class="pie-chart-title">
                @T("Time.Yesterday")
            </div>
            <div class="report-pie-chart" data-percent="87">
                <div class="pie-chart-text">
                    <div class="pie-chart-value">474</div>
                    <div class="pt-1 small">@T("Admin.SalesReport.Incomplete.Item")</div>
                </div>
            </div>
        </div>
        <div>
            <div class="pie-chart-title">
                @T("Admin.Report.LastWeek")
            </div>
            <div class="report-pie-chart" data-percent="71">
                <div class="pie-chart-text">
                    <div class="pie-chart-value">1584</div>
                    <div class="pt-1 small">@T("Admin.SalesReport.Incomplete.Item")</div>
                </div>
            </div>
        </div>
        <div>
            <div class="pie-chart-title">
                @T("Admin.Report.OlderOrders")
            </div>
            <div class="report-pie-chart" data-percent="100">
                <div class="pie-chart-text">
                    <div class="pie-chart-value">0</div>
                    <div class="pt-1 small">@T("Admin.SalesReport.Incomplete.Item")</div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .report-pie-row {
        padding: 1.5rem 3rem 2.5rem 3rem;
        align-items: center;
        display: flex;
    }

    .report-pie-chart {
        position: relative;
        display: inline-block;
        text-align: center;
    }

        .report-pie-chart canvas {
            position: absolute;
            top: 0;
            left: 0;
        }

    .pie-chart-text {
        padding-top: 35%;
        font-size: 1rem;
        padding-left: 2.1rem;
        padding-right: 2.1rem;
    }

    .pie-chart-value {
        font-weight: bold !important;
        font-size: 1.25rem !important;
    }

    .pie-chart-title {
        font-weight: bold !important;
        font-size: 1rem !important;
        text-align: center;
        padding-bottom: 1.25rem;
    }
</style>

<script>

    var defaultSize = 200;
    var style = getComputedStyle(document.body);
    var $colorPrimary = style.getPropertyValue('--primary');
    var $colorSuccess = style.getPropertyValue('--success');
    var $colorLight = style.getPropertyValue('--light');
    var $pieChart = $('.report-pie-chart');

    $(function () {
        $pieChart.easyPieChart({
            //barColor: '#ef1e25',
            barColor: function (percent) {
                var ctx = this.renderer.getCtx();
                var canvas = this.renderer.getCanvas();
                var gradient = ctx.createLinearGradient(canvas.height / 1.2, 0, canvas.height / 2, canvas.width);
                gradient.addColorStop(0, $colorSuccess);
                gradient.addColorStop(0.2, $colorPrimary);
                return gradient;
            },
            trackColor: '#f2f2f2',
            scaleColor: '#dfe0e0',
            scaleLength: 0,
            lineCap: 'round',
            lineWidth: 8,
            size: defaultSize,
            rotate: 0,
            animate: {
                enabled: true,
                duration: 1500,
            },
            easing: 'easyInOutSine',
            //onStart = function (from, to) {

            //},
            //onStep = function (from, to, currentValue) {
            //    //this.$el = access DOM
            //},
            //onStop = function (from, to) {

            //},
        });
        $pieChart.css("width", defaultSize);
        $pieChart.css("height", defaultSize);
    });
</script>