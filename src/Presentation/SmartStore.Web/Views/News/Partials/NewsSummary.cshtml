@model NewsItemListModel
@using SmartStore.Web.Models.News;
@using SmartStore.Web.Framework.UI;

@{
    Layout = "";
    Html.AppendScriptParts(true, "~/Content/vendors/imagesloaded/imagesloaded.pkgd.min.js");
}

@if (Model.RenderHeading)
{
    <div>
        @{ Html.RenderPartial("NewsSummaryHeading", Model); }
    </div>
}

<div class="newsitems news-summary" style="visibility: hidden;">
    @{ Html.RenderPartial("NewsSummaryList", Model); }
</div>

<script>
    $(function () {
        $(".newsitems").masonryGrid(".newslist-item");
    });
</script>